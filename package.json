{
  "name": "small_talk",
  "productName": "SmallTalk",
  "version": "1.0.1",
  "description": "Application made for collage",
  "main": "main.js",
  "scripts": {
    "start": "webpack-dev-server --mode development",
    "build": "webpack --mode production",
    "electron-start": "electron .",
    "package": "electron-builder"
  },
  "keywords": [],
  "build": {
    "appId": "com.yourapp.id",
    "productName": "AuOp",
    "files": [
      "dist/**/*",
      "main.js",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "asar": true,
    "asarUnpack": [
      "dist/main.exe"
    ]
  },
  "author": "Piotr Kostecki i Jeronimo Martins",
  "license": "ISC",
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@reduxjs/toolkit": "^2.2.6",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "child_process": "^1.0.2",
    "crypto": "^1.0.1",
    "electron": "^32.1.2",
    "electron-is-dev": "^3.0.1",
    "framer-motion": "^11.2.13",
    "fs": "^0.0.1-security",
    "path": "^0.12.7",
    "python-shell": "^5.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.24.1",
    "redux": "^5.0.1",
    "typescript": "^5.5.3",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/webpack": "^5.28.5",
    "@types/webpack-dev-server": "^4.7.2",
    "css-loader": "^7.1.2",
    "electron-builder": "^25.0.5",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  }
}
